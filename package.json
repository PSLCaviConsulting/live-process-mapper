{
    "name": "live-process-mapper",
    "version": "0.1.0",
    "private": true,
    "description": "A state-of-the-art live process mapping application",
    "workspaces": [
          "apps/*",
          "packages/*"
    ],
    "scripts": {
          "dev": "turbo run dev",
          "build": "turbo run build",
          "start": "turbo run start",
          "lint": "turbo run lint",
          "test": "turbo run test",
          "clean": "turbo run clean && rm -rf node_modules",
          "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
          "prepare": "husky install"
    },
    "devDependencies": {
          "@types/node": "^20.10.0",
          "eslint": "^8.55.0",
          "husky": "^8.0.3",
          "lint-staged": "^15.2.0",
          "prettier": "^3.1.0",
          "turbo": "^1.11.0",
          "typescript": "^5.3.0"
    },
    "engines": {
          "node": ">=18.0.0",
          "npm": ">=9.0.0"
    },
    "packageManager": "npm@10.2.0",
    "lint-staged": {
          "*.{ts,tsx,js,jsx}": [
                  "eslint --fix",
                  "prettier --write"
          ],
          "*.{json,md}": [
                  "prettier --write"
          ]
    }
}
